#!/usr/bin/env ruby

require_relative "../lib/user"
require_relative "../lib/teacher"
require_relative "../lib/student"

steve = Student.new
steve.first_name = "Steve"
steve.last_name = "Jobs"

avi = Teacher.new
avi.first_name = "Avi"
avi.last_name = "Flombaum"

jim = User.new
jim.first_name = "Jim"
jim.last_name = "Henson"




5.times do
    some_knowledge = avi.teach
    steve.learn(some_knowledge)
    puts "Steve just learned this important knowledge: '#{some_knowledge}' from Avi"
end

steves_knowledge = ""
steve.knowledge.each{|lesson| steves_knowledge += " \n #{lesson}"}
puts "Steve knows all about: #{steves_knowledge}"
